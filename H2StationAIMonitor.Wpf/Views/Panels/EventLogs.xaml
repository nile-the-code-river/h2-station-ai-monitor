<UserControl x:Class="H2StationAIMonitor.Wpf.Views.Panels.EventLogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:H2StationAIMonitor.Wpf.Views.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="817" d:DesignWidth="830">
    <Grid Background="#878787">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.ColumnSpan="2" Style="{StaticResource SectionHeaderBorderStyle}">
            <TextBlock Style="{StaticResource SectionHeaderTextStyle}"
           Text="EVENT LOGS"/>
        </Border>

        <Button Grid.Column="1" Background="Transparent" HorizontalAlignment="Right" BorderThickness="0">
            <Image Source="/Images/download.png" Width="18" Height="18" Margin="0 0 12 0"/>
        </Button>

    </Grid>
</UserControl>
