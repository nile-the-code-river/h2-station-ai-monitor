<UserControl x:Class="H2StationAIMonitor.Wpf.Views.Panels.StationStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:H2StationAIMonitor.Wpf.Views.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="405">
    <Border Background="#252525">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 헤더 -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource SectionHeaderBorderStyle}">
                <TextBlock Style="{StaticResource SectionHeaderTextStyle}"
           Text="STATION STATUS"/>
            </Border>

            <!--row1-->
            <Grid Grid.Row="1" Grid.Column="1" Margin="0 30 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0"
                       Source="/Resources/Images/charging-car.png"
                       Width="32" Height="32"
                       VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                           Text="수소 충전기"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"/>

                    <Button Grid.Column="4"
                        Background="#28C716"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="0,0,40,0"
                        Width="80" Height="24"
                        FontSize="13"
                        Content="{Binding ConnectionStatus, TargetNullValue='사용중', FallbackValue='사용중'}"/>
                </Grid>
            </Grid>

            <!--row2-->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0"
                       Source="/Resources/Images/waiting-car.png"
                       Width="32" Height="32"
                       VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                           Text="대기 차량"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"/>

                    <Button Grid.Column="4"
                        Background="#2AB8FA"
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="0,0,40,0"
                        Width="50" Height="24"
                        FontSize="13"
                        Content="{Binding ConnectionStatus, TargetNullValue='0', FallbackValue='0'}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
