<UserControl x:Class="H2StationAIMonitor.Wpf.Views.Panels.AlertStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:H2StationAIMonitor.Wpf.Views.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="405">
    <Border Width="405" Height="190" Background="#252525">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <Border Grid.Row="0" Style="{StaticResource SectionHeaderBorderStyle}">
                <TextBlock Style="{StaticResource SectionHeaderTextStyle}"
               Text="ALERT SYSTEM"/>
            </Border>

            <!-- BODY -->
            <Grid Grid.Row="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1행-->
                <Grid Grid.Row="0" Margin="30,30,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0"
                           Source="/Resources/Images/speaker.png"
                           Width="32" Height="32"
                           VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                               Text="디바이스 연결 상태"
                               Foreground="White"
                               FontSize="16"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="3"
                            Style="{StaticResource RoundedButtonStyle}"
                            Background="#F7D115"
                            Margin="0,0,40,0"
                            Width="80" Height="24"
                            FontSize="13"
                            Content="{Binding ConnectionStatus, TargetNullValue='연결됨', FallbackValue='연결됨'}"/>
                </Grid>

                <!-- 마지막 행 버튼 -->
                <Button Grid.Row="2"
                        Style="{StaticResource RoundedButtonStyle}"
                        Background="#F7D115"
                        Width="345"
                        Height="40"
                        Margin="0,0,0,30"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Content="{Binding WarningStatus, TargetNullValue='장기 체류 경고 중', FallbackValue='장기 체류 경고 중'}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>