<Window x:Class="H2StationAIMonitor.Wpf._Tests.CoreToWpfConnectionTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H2StationAIMonitor.Wpf._Tests"
        mc:Ignorable="d"
        Title="Core to WPF Connection Test" Height="300" Width="250"
        WindowStartupLocation="CenterScreen"
        Background="#252525">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Count" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Count}" Foreground="White" FontSize="64" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
